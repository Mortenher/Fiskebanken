<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.morten.fiskebanken.activities.FishinfoActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dette er info om fisken din"
        android:id="@+id/fishinfo"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gjennomsnitt vekt og lengde for denne typen fisk"
        android:id="@+id/textView"
        android:layout_below="@+id/fishinfo1"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fishinfo1"
        android:layout_below="@+id/fishinfo"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fishinfo2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/fishinfo1"
        android:layout_alignStart="@+id/fishinfo1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fishinfo3"
        android:layout_below="@+id/fishinfo2"
        android:layout_alignLeft="@+id/fishinfo2"
        android:layout_alignStart="@+id/fishinfo2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fishinfo4"
        android:text="MAKE MY LIFE EASY"
        android:layout_below="@+id/fishinfo3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fishinfo5"
        android:layout_below="@+id/fishinfo4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp" />

</RelativeLayout>
